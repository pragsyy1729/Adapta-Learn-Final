{
  "rate_limits": {
    "api_endpoints": {
      "/api/auth/login": {
        "requests_per_minute": 5,
        "requests_per_hour": 20,
        "burst_limit": 10
      },
      "/api/auth/register": {
        "requests_per_minute": 3,
        "requests_per_hour": 10,
        "burst_limit": 5
      },
      "/api/dashboard": {
        "requests_per_minute": 30,
        "requests_per_hour": 200,
        "burst_limit": 50
      },
      "/api/learning-paths": {
        "requests_per_minute": 20,
        "requests_per_hour": 100,
        "burst_limit": 30
      },
      "/api/conversation": {
        "requests_per_minute": 10,
        "requests_per_hour": 50,
        "burst_limit": 15
      },
      "/api/recommendations": {
        "requests_per_minute": 15,
        "requests_per_hour": 75,
        "burst_limit": 25
      }
    },
    "user_types": {
      "admin": {
        "multiplier": 2.0,
        "description": "Administrators have higher rate limits"
      },
      "manager": {
        "multiplier": 1.5,
        "description": "Managers have elevated rate limits"
      },
      "employee": {
        "multiplier": 1.0,
        "description": "Standard employee rate limits"
      }
    },
    "global_limits": {
      "max_concurrent_sessions": 1000,
      "max_requests_per_ip_per_minute": 100,
      "max_requests_per_ip_per_hour": 1000
    },
    "ai_service_limits": {
      "conversation_tokens_per_minute": 10000,
      "embedding_requests_per_minute": 100,
      "recommendation_requests_per_hour": 500
    }
  }
}